<html class="registration-background">
<div class="page-wrap">
  <h1>Register</h1>

  <div class="grid">

    <%= form_for @user do |f| %>
       <div class="col col-2-3">
        <%= f.label :username %>
         <br>
        <%= f.text_field :username %>
         <br>
        <%= f.label :first_name %>
         <br>
        <%= f.text_field :first_name %>
        </div>

        <div class="col col-1-3">
        <%= f.label :password %>
          <br>
        <%= f.text_field :password %>
          <br>

        <%= f.label :last_name %>
          <br>
        <%= f.text_field :last_name %>
        </div>

        <div class="col col-1-1">
        <%= f.label :bio %>
          <br>
        <%= f.text_area :bio %>


        <p>How often do you rant?</p>

        <%= f.radio_button :frequency, 'Daily', :checked => 'Daily' %>
        <%= f.label :frequency, 'Daily', :value => 'Daily' %>
        <%= f.radio_button :frequency, 'Weekly', :checked => 'Weekly' %>
        <%= f.label :frequency, 'Weekly', :value => 'Weekly' %>
        <%= f.radio_button :frequency, 'Monthly', :checked => 'Monthly' %>
        <%= f.label :frequency, 'Monthly', :value => 'Monthly' %>
        <br>
        <hr>
        <%= f.submit "Register", class: "form-button" %>

    <% end %>
    </div>
  </div>
</div>
</html>